<% provide(:title, 'Orders') %>

<div class = "showEditPanel">

<div id = "itemsContainer">
  
  <h1>Order Details</h1>
  
  <table id = "customers">
    
    <tr>
      
      <td>Order Date : </td>
      <td>Ordered By : </td>
      <td>Order Status : </td>
      
    </tr>
    
    <tr>
      
      <td><%= @order.order_date %></td>
      <td><%= @order.user %></td>
      <td><%= @order.status %></td>
      
    </tr>
    

  </table>
  
  <h2>Order Contents</h2>
  
  <table id = "customers">
    
    <% @orderitems.each do |orderitem| %>
    
    <tr>
      
      <td><%= orderitem.title %></td>
      <td>Quantity Ordered : <%= orderitem.quantity %></td>
      
    </tr>
    
    <% end %>
    
        <tr>
      
      <td><%= link_to 'Edit Order', edit_order_path(@order), :class => "button" %></td>
      <td><%= link_to 'Back To Orders', orders_path(@order), :class => "button" %></td>
      
    </tr>
    
  </table>
  
  
  
  
</div>

</div>
<footer class="foot">
    
    <!-- Check user is logged in -->
    
    <% if user_signed_in? %>
    
    
    
        <!-- Check if the current user is an admin user. Only display option to add new item if yes -->
    
        <% if current_user.admin? %>

        <%= link_to 'New Item', new_item_path, :class =>"button", :role =>"button" %>
        
        <%= link_to 'New Category', new_category_path, :class =>"button", :role =>"button" %>
        
        <% end %>
            
    <% end %>
    
    
    <%= link_to "View Orders", orders_path, :class => "button", :role => "button" %>

</footer>
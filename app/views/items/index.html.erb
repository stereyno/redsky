<% provide(:title, 'Store') %>



<div class ="lowerPanel">
<h1>All Vinyl Currently In Stock</h1>
<br><br>



    <% @items.each do |item| %>
    <div class="itemhols">
      
      <%= link_to (image_tag item.image, :class=>"itemholsIm"), item %>
      
      <h1><%= item.artist %></h1>
      <h1><%= item.title %></h1>
      
      <br>
        
      
        <%= item.genre %><br> 
        Label : <%= item.label %> <br>
        Released : <%= item.release_date %><br> 
        <%= number_to_currency(item.price, :unit =>"â‚¬") %>
        
        <br><br>
        
        <% if user_signed_in? %>
        
        <!-- if the user is a registered user, display 'Add To Cart' -->
        
        <a href = "/cart/<%= item.id %>" class = "button">Add To Cart</a>
        
          <!-- if the logged in user is also an admin, display 'update items' options -->
        
          <% if current_user.admin? %>
          <br><br>
          <%= link_to 'Show', item, :class =>"adminButton", :role =>"button" %> | 
          <%= link_to 'Edit', edit_item_path(item), :class =>"adminButton", :role =>"button" %> | 
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"adminButton", :role =>"button" %>
        
          <% end %>
        
        <% end %>
        
    </div>  
    
    <% end %>


<br>

</div>



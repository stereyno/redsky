<% provide(:title, 'Store') %>
<div id="itemsContainer">
<h1>Items</h1>



    <% @items.each do |item| %>
    <div class="itemhols">
      
      <%= link_to (image_tag item.image, :class=>"itemholsIm"), item %>
      
      
      <h1><%= item.artist %> - <%= item.title %></h1>
      
        
      
        <%= item.reference_ID %>
        <%= item.genre %>
        <%= item.release_date %>
        <%= item.label %>
        <%= item.price %>
        
        <% if user_signed_in? %>
        
        <!-- if the user is a registered user, display 'Add To Cart' -->
        
        <a href = "/cart/<%= item.id %>" class = "button">Add To Cart</a>
        
          <!-- if the logged in user is also an admin, display 'update items' options -->
        
          <% if current_user.admin? %>
        
          <%= link_to 'Show', item, :class =>"button", :role =>"button" %>
          <%= link_to 'Edit', edit_item_path(item), :class =>"button", :role =>"button" %>
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"button", :role =>"button" %>
        
          <% end %>
        
        <% end %>
        
    </div>  
    
    <% end %>


<br>

</div>
